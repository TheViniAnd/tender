<VirtualHost *:80 *:443>
SSLEngine on

WSGIPassAuthorization On
RewriteEngine on
RewriteCond %{HTTP:Authorization} ^(.*)
RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]
SSLCertificateFile /etc/httpd/ssl/dgroup.itest.im_le1.crt
SSLCertificateKeyFile /etc/httpd/ssl/dgroup.itest.im_le1.key
LoadModule rewrite_module /usr/lib64/httpd/modules/mod_rewrite.so
ServerName www.dgroup.itest.im
ServerAlias dgroup.itest.im
DocumentRoot "/var/www/dgroup"
Alias /static /var/www/dgroup/static
<Directory /var/www/dgroup/static>
 Require all granted
</Directory>

<Directory /var/www/dgroup/apiService>
   <Files wsgi.py>
      Order deny,allow
      Require all granted
   </Files>
</Directory>

WSGIDaemonProcess dgroup python-path=/var/www/dgroup:/var/www/dgroup/nenv/lib/python3.6/site-packages
WSGIProcessGroup dgroup
WSGIScriptReloading Off
WSGIScriptAlias / /var/www/dgroup/apiService/wsgi.py
</VirtualHost>



