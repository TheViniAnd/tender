LoadModule rewrite_module /usr/lib64/httpd/modules/mod_rewrite.so
ServerName www.xn--80aaa6cblddfgbd.xn--p1ai
ServerAlias xn--80aaa6cblddfgbd.xn--p1ai
DocumentRoot "/var/www/html"
Alias /static /var/www/html/static
<Directory /var/www/html/static>
 Require all granted
</Directory>

<Directory /var/www/html/sss>
   <Files wsgi.py>
      Order deny,allow
      Require all granted
   </Files>
</Directory>

WSGIDaemonProcess html python-path=/var/www/html:/var/www/html/nenv/lib/python3.6/site-packages
WSGIProcessGroup html
WSGIScriptAlias / /var/www/html/sss/wsgi.py
</VirtualHost>

